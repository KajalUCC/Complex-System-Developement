<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

                <servlet>
                <servlet-name>Login</servlet-name>
                <servlet-class>LoginServlet</servlet-class>
                </servlet>
     
        <servlet-mapping>
            <servlet-name>Login</servlet-name>
            <url-pattern>/loginServlet</url-pattern>
        </servlet-mapping>

    <servlet>
                <servlet-name>AddServer</servlet-name>
                <servlet-class>add_NewServer</servlet-class>
                </servlet>
     
        <servlet-mapping>
            <servlet-name>AddServer</servlet-name>
            <url-pattern>/add_NewServer</url-pattern>
        </servlet-mapping>


    <servlet>
                <servlet-name>NewRequest</servlet-name>
                <servlet-class>handleRequestServlet</servlet-class>
                </servlet>
     
        <servlet-mapping>
            <servlet-name>NewRequest</servlet-name>
            <url-pattern>/handleRequestServlet</url-pattern>
        </servlet-mapping>


    <servlet>
                <servlet-name>ServerDetails</servlet-name>
                <servlet-class>serverDetailsServlet</servlet-class>
                </servlet>
     
        <servlet-mapping>
            <servlet-name>ServerDetails</servlet-name>
            <url-pattern>/serverDetailsServlet</url-pattern>
        </servlet-mapping>


    <servlet>
                <servlet-name>InfraServlet</servlet-name>
                <servlet-class>infraServlet</servlet-class>
                </servlet>
    <servlet-mapping>
        <servlet-name>InfraServlet</servlet-name>
        <url-pattern>/infraServlet</url-pattern>
    </servlet-mapping>


</web-app>